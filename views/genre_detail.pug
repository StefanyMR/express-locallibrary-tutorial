extends layout

block content

  h1 Genero: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Livros

    dl
    each book in genre_books
      dt
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p Este genero n√£o tem livros.

  hr
  p
    a(href=genre.url+'/delete') Exclua genero
  p
    a(href=genre.url+'/update') Atualize genero