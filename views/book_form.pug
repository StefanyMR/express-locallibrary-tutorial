extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Titulo:
      input#title.form-control(type='text', placeholder='Nome do livro' name='title' required='true' value=(undefined===book ? '' : book.title) )
    div.form-group
      label(for='author') Autor:
      select#author.form-control(type='select', placeholder='Selecione autor' name='author' required='true' )
        - authors.sort(function(a, b) {let textA = a.first_name.toUpperCase(); let textB = b.family_name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for author in authors
          if book
            option(value=author._id selected=(author._id.toString()===book.author._id.toString() ? 'selected' : false) ) #{author.name}
          else
            option(value=author._id) #{author.name}
    div.form-group
      label(for='summary') Resumo:
      input#summary.form-control(type='textarea', placeholder='Resumo' name='summary' value=(undefined===book ? '' : book.summary) required='true')
    div.form-group
      label(for='isbn') ISBN:
      input#isbn.form-control(type='text', placeholder='ISBN13' name='isbn' value=(undefined===book ? '' : book.isbn) required='true')
    div.form-group
      label GÃªnero:
      div
        for genre in genres
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
            label(for=genre._id) #{genre.name}
    button.btn.btn-dark(type='submit') enviar

  if errors
    ul
      for error in errors
        li!= error.msg
