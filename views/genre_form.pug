extends layout

block content

  h1 Crie genero

  form(method='POST' action='')
    div.form-group
      label(for='name') Genero:
      input#name.form-control(type='text', placeholder='Fantasia, Poesia etc.' name='name' required='true' value=(undefined===genre ? '' : genre.name) )
    button.btn.btn-dark(type='submit') Enviar

  if errors
    ul
      for error in errors
        li!= error.msg