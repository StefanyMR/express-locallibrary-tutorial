extends layout

block content
  h1 Crie autor

  form(method='POST' action='')
    div.form-group
      label(for='first_name') Nome:
      input#first_name.form-control(type='text', placeholder='nome' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      label(for='family_name') Sobrenome:
      input#family_name.form-control(type='text', placeholder='sobrenome' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
    div.form-group
      label(for='date_of_birth') Data de nascimentoo:
      input#date_of_birth.form-control(type='date', name='nascimento' value=(undefined===author ? '' : author.date_of_birth_yyyy_mm_dd) )
    div.form-group
      label(for='date_of_death') Data de morte:
      input#date_of_death.form-control(type='date', name='morte' value=(undefined===author ? '' : author.date_of_death_yyyy_mm_dd) )
    button.btn.btn-dark(type='submit') Enviar

  if errors
    ul
      for error in errors
        li!= error.msg